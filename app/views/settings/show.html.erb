<div class="row">
  <div class="col-lg-7 col-xs-12 mx-auto">
    <div class="set-Container">
      <div class="set-Container_Header">
        <h2 class="set-Container_Title">
          リマインダー設定
        </h2>
      </div>
      <div class="set-Container_Body">
        <%= form_with model: @form, scope: :form, url: setting_url, method: :patch, local: true do |f| %>
          <div class="frm-Row mb-3">
            <label class="mb-0">
              最後にリストを更新してから
            </label>
            <%= f.collection_select :remind_interval, RemindInterval.all.map(&:minutes), :to_i, :to_i, {}, class: 'ml-1 mr-1' %>
            <label class="mb-0">
              分後にリマインドする
            </label>
          </div>
          <button class="btn sw-Button-primary">
            保存する
          </button>
        <% end -%>
      </div>
    </div>
    <div class="set-Nav">
      <%= link_to root_url, class: 'sw-Link-sm' do %>
        <i class="icon-Back"></i>
        Todoリストへもどる
      <% end -%>
    </div>
  </div>
</div>
