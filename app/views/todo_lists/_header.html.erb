<div data-controller="inline-edit content" data-content-value="<%= title %>" class="tdl-Header">
  <div data-target="inline-edit.showSection" class="tdl-Row">
    <div class="tdl-HeaderWrapper">
      <span data-target="content.show" class="tdl-Title"></span>
      <div class="tdl-Header_Actions">
        <%= link_to '編集する', '#', data: { action: 'inline-edit#open content#edit' }, class: 'tdl-Item_Action', id: 'test-edit-header' %>
      </div>
    </div>
  </div>
  <div data-target="inline-edit.editSection">
    <div data-controller="safe-form" class="tdl-TitleForm">
      <input data-target="content.input safe-form.field" name="form[title]" type="text" class="tdl-TitleForm_Input" autocomplete="off">
      <button data-action="content#update inline-edit#close" data-target="safe-form.submit" class="sw-Button sw-Button-primary">
        <i class="icon-Save"></i>
      </button>
      <a data-action="inline-edit#close" href="#" class="sw-Cancel sw-Cancel-btn">
        <i class="icon-Cancel"></i>
      </a>
    </div>
  </div>
</div>
